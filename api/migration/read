import sys
# import subprocess ////
import simplejson

# //// TODO: show only installed apps that can be migrated


def getMigrationStatus(app_name):
    file_name = "/tmp/{}_ns8_migration".format(app_name)

    try:
        with open(file_name, 'r') as file:
            status = file.read().replace('\n', '')
            return status

    except IOError as e:
        return "not_migrated"


try:
    apps = [
        {
            "id": "nethserver-nextcloud",
            "name": "Nextcloud"
        },
        {
            "id": "nethserver-mattermost",
            "name": "Mattermost"
        },
        {
            "id": "nethserver-roundcubemail",
            "name": "Webmail"
        }
    ]

    for app in apps:
        status = getMigrationStatus(app["id"])
        app["status"] = status

    output = simplejson.dumps({'migration': apps})
    print(output)
except Exception as e:
    print simplejson.dumps({'error': "%s" % e})
    sys.exit(1)

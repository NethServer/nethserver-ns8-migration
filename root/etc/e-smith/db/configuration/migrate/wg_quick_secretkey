{
    use NethServer::Password;
    my $secretKey = $DB->get_prop_and_delete('wg-quick@ns8', 'SecretKey');
    if ($secretKey) {
        my $tmpmask = umask 0077;
        open(FH, ">", '/var/lib/nethserver/secrets/ns8wg');
        print FH $secretKey . "\n";
        close(FH);
        umask $tmpmask;
    }
    '';
}
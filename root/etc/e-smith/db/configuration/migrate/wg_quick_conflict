{
    # Rename wg0 interface to ns8
    my $oldRecord = $DB->get('wg-quick@wg0') || return '';
    my $newRecord = $DB->new_record('wg-quick@ns8', { type => "service" });
    $newRecord->merge_props($oldRecord->props);
    $oldRecord->delete();
    system('systemctl', 'disable', '--now', 'wg-quick@wg0');
    rename('/etc/wireguard/wg0.conf', '/etc/wireguard/ns8.conf');
    system('systemctl', 'enable', '--now', 'wg-quick@ns8');
    '';
}